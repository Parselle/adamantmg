section#case.section.case
  .wrap
    h1.section__title.case__title.line КЕЙСЫ

    ul.c-breadcrumbs.case__breadcrumbs
      li.c-breadcrumbs__item
        a(href="/") Главная
      li.c-breadcrumbs__item
        a(href="/index.html#cases") Кейсы
      li.c-breadcrumbs__item
        a(href="") Ленись&nbsp;и&nbsp;худей

    article.case__article
      img.case__img(src='img/cases/1.jpg', alt="Ленись и худей")

      each item in case_article
        h4.case__title= item.title
        p.case__text !{item.text}

      ul.case__stats
        each item in case_stats
          li.stats__item
            img.stats__icon(src= item.img, alt="Иконка")
            p.stats__text !{item.text}

